# Run all scripts in ~/.config/Xsession.d/
SESSIONS="$HOME/.config/Xsession.d" 
if [ -d "$SESSIONS" ]; then
  SESSIONFILES=$(run-parts --list $SESSIONS)
  if [ -n "$SESSIONFILES" ]; then
    for SESSIONFILE in $SESSIONFILES; do
      source $SESSIONFILE
    done
  fi
fi

BACKGROUND=/usr/share/backgrounds/gnome/Dark_Ivy.jpg
if [ -f "$BACKGROUND" ]; then
  feh --bg-scale $BACKGROUND
fi

xmodmap ~/.xmodmap
xcape -d -t 250 -e 'Control_L=Escape' &
tray &

killall notify-osd
statnot ~/.config/statnot/config.py &

killall gnome-screensaver
xscreensaver -no-splash &

nm-applet &
