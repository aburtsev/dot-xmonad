set -o nounset
set -o errexit

# Run all scripts in ~/.config/X11/Xsession.d
SESSIONS="$HOME/.config/X11/Xsession.d"
if [ -d "$SESSIONS" ]; then
  SESSIONFILES=$(run-parts --list $SESSIONS)
  if [ -n "$SESSIONFILES" ]; then
    for SESSIONFILE in $SESSIONFILES; do
      source $SESSIONFILE
    done
  fi
fi
